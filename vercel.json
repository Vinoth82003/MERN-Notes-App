{
  "version": 2,
  "name": "mern-todo",
  "builds": [
    { "src": "server/server.js", "use": "@vercel/node" },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/server.js" },
    { "src": "/(.*)", "dest": "/client/build/$1" }
  ],
  "env": {
    "DB_URL": "mongodb://localhost:27017/todoapp",
    "PORT": "5000"
  }
}
